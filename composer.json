{
    "name": "rawphp/raw-mail",
    "type": "library",
    "description": "RawMail is a wrapper around PHPMailer and is used by RawPHP framework and other applications.",
    "keywords": [ "email", "smtp" ],
    "homepage": "http://rawphp.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Kaczocha",
            "email": "tom@rawphp.org"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "rawphp/raw-base": "1.0.0-RC",
        "phpmailer/phpmailer": "v5.2.8",
        "rawphp/raw-yaml": "1.0.0-RC-1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.2.5",
        "squizlabs/php_codesniffer": "dev-master",
        "rawphp/raw-code-standards": "1.*@dev",
        "phpdocumentor/phpdocumentor": "dev-master",
		"satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "classmap": [
            "lib/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
